<Window x:Class="BankManagementSystem.AccountStatementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Statement" Height="600" Width="800">

    <Grid Margin="10">

        <TextBlock FontSize="28" HorizontalAlignment="Center" Text="Account Statement" Margin="269,10,269.6,480.4"/>

        <!-- Account Number Input -->
        <TextBlock Text="Account Number:" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="AccountNumberTextBox" Width="200" VerticalAlignment="Top" Margin="269,70,304.6,0"/>

        <!-- Generate Statement Button -->
        <Button Content="Generate Statement" Width="200" Height="40" VerticalAlignment="Top"
                Margin="540,70,33.6,0" Click="GenerateStatement_Click"/>

        <!-- Transaction History Display -->
        <ListView Name="TransactionListView" Margin="10,150,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="150"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="150"/>
                    <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="150"/>
                    <GridViewColumn Header="Balance" DisplayMemberBinding="{Binding Balance}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>