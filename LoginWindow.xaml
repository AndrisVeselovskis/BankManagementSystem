<Window x:Class="BankManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="500">
    <Grid Margin="30">

        <TextBlock FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0" Text="Bank Management System - Login" />

        <!-- Username Input -->
        <TextBlock Text="Username:" Margin="50,100,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameTextBox" Width="300" Height="30" Margin="150,100,0,0" VerticalAlignment="Top"/>

        <!-- Password Input -->
        <TextBlock Text="Password:" Margin="50,150,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBox" Width="300" Height="30" Margin="150,150,0,0" VerticalAlignment="Top"/>

        <!-- Login Button -->
        <Button Content="Login" Width="120" Height="40" Margin="180,220,0,0" VerticalAlignment="Top" Click="LoginButton_Click"/>
    </Grid>
</Window>
